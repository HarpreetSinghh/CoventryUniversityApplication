<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="popup_theme" parent="android:Theme.Light">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="default_edt_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColorHint">@color/editext_hint_color</item>
        <item name="android:textSize">@dimen/normal_font_size</item>
        <item name="android:paddingLeft">@dimen/textview_default_left_padding</item>
        <item name="android:textColor">@color/editext_text_color</item>
        <item name="android:background">@drawable/corner_edittext_background_drawable</item>
    </style>

    <style name="default_label_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/textview_default_left_padding</item>
        <item name="android:textSize">@dimen/normal_font_size</item>
        <item name="android:textColorHint">@color/editext_hint_color</item>
        <item name="android:textColor">@color/default_label_color</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="default_button_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/buttton_text_size</item>
        <item name="android:minHeight">@dimen/min_height</item>
        <item name="android:padding">@dimen/edittext_left_padding</item>
        <item name="android:minWidth">@dimen/min_width</item>
        <item name="android:textColor">@color/button_text_color</item>
        <item name="android:background">@drawable/button_background_drawable</item>
    </style>
</resources>
