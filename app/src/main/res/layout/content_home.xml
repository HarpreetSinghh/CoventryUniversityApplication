<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="100"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.conventry.university.activity.HomeActivity"
    tools:showIn="@layout/activity_home">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:gravity="center"
        android:textAllCaps="true"
        android:background="@color/white"
        android:textStyle="bold"
        android:textColor="@color/progress_bar_runing"
        android:textSize="@dimen/large_font_size"
        android:padding="@dimen/edittext_left_padding"
        android:text="@string/university_name"/>
    <View
        android:layout_width="match_parent"
        android:background="@color/darker_grey_color"
        android:layout_height="@dimen/thin_border_width">
    </View>
    <GridView
        android:layout_marginTop="@dimen/editext_defualt_padding"
        android:id="@+id/gL_category"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="84"
        android:gravity="center"
        android:numColumns="3"
        android:stretchMode="columnWidth"
        android:horizontalSpacing="@dimen/edittext_left_padding" >
    </GridView>

    <Button
        android:id="@+id/btn_notifications"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:text="@string/get_notifications"
        style="@style/default_button_style"/>

</LinearLayout>
