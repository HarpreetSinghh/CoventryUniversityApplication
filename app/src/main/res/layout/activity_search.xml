<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_module"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/screen_background_drawable"
    android:orientation="vertical"
    android:weightSum="100"
    tools:context="com.conventry.university.activity.SearchActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_weight="40"
        android:layout_marginLeft="@dimen/list_view_bottom_margin"
        android:layout_marginRight="@dimen/list_view_bottom_margin"
        android:weightSum="40">

        <AutoCompleteTextView
            android:id="@+id/search_edt"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:textSize="@dimen/large_font_size"
            android:layout_weight="10"
            android:completionThreshold="1"
            android:background="@color/white"
            android:hint="@string/search_hint"
            style="@style/default_edt_style"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="60"
        android:layout_height="0dp"
        android:gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/searchlogo"/>
    </LinearLayout>



</LinearLayout>