<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="@dimen/editext_defualt_padding"
    android:background="@android:color/transparent">

    <LinearLayout
        android:id="@+id/module_outer_layout"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_margin="@dimen/textview_default_left_padding"
        android:weightSum="6"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt_module_title"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="match_parent"
            android:padding="@dimen/textview_default_left_padding"
            style="@style/default_label_style"
            android:textColor="@color/default_label_color"
            android:textSize="@dimen/normal_font_size" />

        <TextView
            android:id="@+id/temp_high"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:padding="@dimen/textview_default_left_padding"
            style="@style/default_label_style"
            android:textColor="@color/default_label_color"
            android:textSize="@dimen/normal_font_size" />

        <TextView
            android:id="@+id/temp_low"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:padding="@dimen/textview_default_left_padding"
            style="@style/default_label_style"
            android:textColor="@color/default_label_color"
            android:textSize="@dimen/normal_font_size" />

    </LinearLayout>

</LinearLayout>