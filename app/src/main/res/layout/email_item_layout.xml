<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="@dimen/editext_defualt_padding"
    android:background="@drawable/screen_background_drawable">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:weightSum="4">

        <TextView
            android:id="@+id/txt_email_from"
            android:layout_width="0dp"
            android:layout_weight="2.2"
            android:layout_height="wrap_content"
            android:padding="@dimen/wide_border_width"
            style="@style/default_label_style"
            android:textStyle="bold"
            android:singleLine="true"
            android:textSize="@dimen/large_font_size"
            android:ellipsize="end"/>

        <TextView
            android:id="@+id/txt_sent_date"
            android:layout_width="0dp"
            android:layout_weight="1.8"
            android:layout_height="match_parent"
            android:padding="@dimen/wide_border_width"
            style="@style/default_label_style"
            android:singleLine="true"
            android:textColor="@android:color/darker_gray"
            android:textSize="@dimen/normal_font_size"
            android:ellipsize="end"/>

    </LinearLayout>

    <TextView
        android:id="@+id/txt_subject_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/wide_border_width"
        style="@style/default_label_style"
        android:textStyle="bold"
        android:singleLine="true"
        android:ellipsize="end"
        />

    <TextView
        android:id="@+id/txt_message_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/wide_border_width"
        style="@style/default_label_style"
        android:maxLines="2"
        android:textColor="@android:color/darker_gray"
        android:ellipsize="end"
        />
</LinearLayout>